@{
    ViewData["Title"] = "Home Page";
}

<div class="clock-container">
    <div id="clock" class="clock">
        <div id="hours" class="hours"></div>
        <div id="minutes" class="minutes"></div>
        <div id="seconds" class="seconds"></div>
    </div>
</div>

<style>
    .clock-container{
        text-align: center;
    }

    .clock{
        width: 200px;
        height: 200px;
        border:solid;
        border-radius: 50%;
        position: relative;
        margin:auto;
    }

    .minutes {
        position: absolute;
        height: 2px;
        width: 50%;
        background-color: #000000;
        top:50%;
        transform: rotate(45deg);
        transform-origin:100%;
    }

    .hours {
        position: absolute;
        height: 4px;
        width: 50%;
        background-color: #000000;
        top: 50%;
        transform: rotate(90deg);
        transform-origin:100%;
    }

    .seconds {
        position: absolute;
        height: 6px;
        width: 50%;
        top: 50%;
        background-color: #000000;
        transform: rotate(360deg);
        transform-origin:100%;
    }

</style>

<script>
    function updateClock(){
        const date = new Date();
        const secondHand = document.getElementById('seconds');
        const minuteHand = document.getElementById('minutes');
        const hourHand = document.getElementById('hours');

        const seconds = date.getSeconds();
        const minutes = date.getMinutes();
        const hours = date.getHours() % 12;

        rotateHand(secondHand, (seconds/60)*360);
        rotateHand(minuteHand, ((minutes + seconds / 60) / 60) * 360);
        rotateHand(hourHand, ((hours + minutes / 60)/12) * 360);

    }
    function rotateHand(hand, degrees){
        hand.style.tranform = `rotate(${degrees}deg)`;
    }
    setInterval(updateClock, 1000);
    updateClock()
</script>